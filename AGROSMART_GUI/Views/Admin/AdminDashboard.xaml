<Window x:Class="AGROSMART_GUI.Views.Admin.AdminDashboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AgroSmart - Panel Administrador" 
        Height="800" Width="1200"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        Background="#F5F5F5">

    <Window.Resources>
        <!-- Estilos para botones del menú lateral -->
        <Style x:Key="MenuButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,15"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Left" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#5CB85C"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Estilo para tarjetas estadísticas -->
        <Style x:Key="StatCardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="25"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="15" ShadowDepth="3" Opacity="0.2"/>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="260"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- ===== MENÚ LATERAL ===== -->
        <Border Grid.Column="0" Background="#4CAF50">
            <StackPanel>
                <!-- Logo y título -->
                <StackPanel Margin="20,30,20,40" HorizontalAlignment="Center">
                    <TextBlock Text="🌱" FontSize="48" HorizontalAlignment="Center" Foreground="White"/>
                    <TextBlock Text="AgroSmart" FontSize="24" FontWeight="Bold" 
                               Foreground="White" HorizontalAlignment="Center" Margin="0,10,0,0"/>
                    <TextBlock Text="ADMINISTRADOR" FontSize="12" FontWeight="SemiBold"
                               Foreground="#E8F5E9" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                </StackPanel>

                <!-- Opciones del menú -->
                <Button x:Name="btnDashboard" Content="📊 Dashboard" 
                        Style="{StaticResource MenuButtonStyle}" 
                        Background="#5CB85C" Click="BtnDashboard_Click"/>

                <Button x:Name="btnCultivos" Content="🌾 Cultivos" 
                        Style="{StaticResource MenuButtonStyle}" 
                        Click="BtnCultivos_Click"/>

                <Button x:Name="btnTareas" Content="📋 Tareas" 
                        Style="{StaticResource MenuButtonStyle}" 
                        Click="BtnTareas_Click"/>

                <Button x:Name="btnInsumos" Content="📦 Insumos" 
                        Style="{StaticResource MenuButtonStyle}" 
                        Click="BtnInsumos_Click"/>

                <Button x:Name="btnEmpleados" Content="👥 Empleados" 
                        Style="{StaticResource MenuButtonStyle}" 
                        Click="BtnEmpleados_Click"/>

                <Button x:Name="btnCosechas" Content="🌽 Cosechas" 
                        Style="{StaticResource MenuButtonStyle}" 
                        Click="BtnCosechas_Click"/>

                <Button x:Name="btnReportes" Content="📈 Reportes" 
                        Style="{StaticResource MenuButtonStyle}" 
                        Click="BtnReportes_Click"/>

                <Separator Background="#5CB85C" Margin="10,20"/>

                <Button x:Name="btnCerrarSesion" Content="🚪 Cerrar Sesión" 
                        Style="{StaticResource MenuButtonStyle}" 
                        Click="BtnCerrarSesion_Click"/>
            </StackPanel>
        </Border>

        <!-- ===== CONTENIDO PRINCIPAL ===== -->
        <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="40,30">

                <!-- Título de bienvenida -->
                <TextBlock x:Name="txtBienvenida" Text="Hola, Administrador" 
                           FontSize="32" FontWeight="Bold" 
                           Foreground="#333" Margin="0,0,0,10"/>

                <TextBlock Text="Panel de Control" 
                           FontSize="16" 
                           Foreground="#666" Margin="0,0,0,40"/>

                <!-- Tarjetas de estadísticas generales -->
                <Grid Margin="0,0,0,40">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Cultivos activos -->
                    <Border Grid.Column="0" Style="{StaticResource StatCardStyle}">
                        <StackPanel>
                            <TextBlock Text="🌾" FontSize="36" Margin="0,0,0,10"/>
                            <TextBlock Text="Cultivos Activos" FontSize="14" Foreground="#666"/>
                            <TextBlock x:Name="txtCultivosActivos" Text="0" FontSize="42" 
                                       FontWeight="Bold" Foreground="#4CAF50" Margin="0,10,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- Tareas pendientes -->
                    <Border Grid.Column="1" Style="{StaticResource StatCardStyle}">
                        <StackPanel>
                            <TextBlock Text="📋" FontSize="36" Margin="0,0,0,10"/>
                            <TextBlock Text="Tareas Pendientes" FontSize="14" Foreground="#666"/>
                            <TextBlock x:Name="txtTareasPendientes" Text="0" FontSize="42" 
                                       FontWeight="Bold" Foreground="#FF9800" Margin="0,10,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- Total empleados -->
                    <Border Grid.Column="2" Style="{StaticResource StatCardStyle}">
                        <StackPanel>
                            <TextBlock Text="👥" FontSize="36" Margin="0,0,0,10"/>
                            <TextBlock Text="Total Empleados" FontSize="14" Foreground="#666"/>
                            <TextBlock x:Name="txtTotalEmpleados" Text="0" FontSize="42" 
                                       FontWeight="Bold" Foreground="#2196F3" Margin="0,10,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- Alertas de stock -->
                    <Border Grid.Column="3" Style="{StaticResource StatCardStyle}">
                        <StackPanel>
                            <TextBlock Text="⚠️" FontSize="36" Margin="0,0,0,10"/>
                            <TextBlock Text="Alertas de Stock" FontSize="14" Foreground="#666"/>
                            <TextBlock x:Name="txtAlertasStock" Text="0" FontSize="42" 
                                       FontWeight="Bold" Foreground="#F44336" Margin="0,10,0,0"/>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- Sección: Cultivos próximos a cosechar -->
                <TextBlock Text="🌽 Cultivos Próximos a Cosechar" 
                           FontSize="20" FontWeight="SemiBold" 
                           Foreground="#333" Margin="0,0,0,20"/>

                <Border Background="White" CornerRadius="10" Padding="25" Margin="0,0,0,40">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="15" ShadowDepth="3" Opacity="0.2"/>
                    </Border.Effect>

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Encabezados -->
                        <Grid Grid.Row="0" Background="#F5F5F5" Margin="0,0,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="150"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0" Text="ID" FontWeight="SemiBold" Padding="10"/>
                            <TextBlock Grid.Column="1" Text="Nombre del Lote" FontWeight="SemiBold" Padding="10"/>
                            <TextBlock Grid.Column="2" Text="Fecha Siembra" FontWeight="SemiBold" Padding="10"/>
                            <TextBlock Grid.Column="3" Text="Cosecha Estimada" FontWeight="SemiBold" Padding="10"/>
                        </Grid>

                        <!-- Lista -->
                        <ItemsControl x:Name="lstCultivosProximos" Grid.Row="1">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border BorderBrush="#E0E0E0" BorderThickness="0,0,0,1" Padding="10,15">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="100"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="150"/>
                                                <ColumnDefinition Width="150"/>
                                            </Grid.ColumnDefinitions>

                                            <TextBlock Grid.Column="0" Text="{Binding Id}" VerticalAlignment="Center"/>
                                            <TextBlock Grid.Column="1" Text="{Binding NombreLote}" VerticalAlignment="Center"/>
                                            <TextBlock Grid.Column="2" Text="{Binding FechaSiembra}" VerticalAlignment="Center"/>
                                            <TextBlock Grid.Column="3" Text="{Binding FechaCosecha}" VerticalAlignment="Center" Foreground="#FF9800"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </Grid>
                </Border>

                <!-- Sección: Insumos con stock bajo -->
                <TextBlock Text="⚠️ Insumos con Stock Bajo" 
                           FontSize="20" FontWeight="SemiBold" 
                           Foreground="#333" Margin="0,0,0,20"/>

                <Border Background="White" CornerRadius="10" Padding="25">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="15" ShadowDepth="3" Opacity="0.2"/>
                    </Border.Effect>

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Encabezados -->
                        <Grid Grid.Row="0" Background="#F5F5F5" Margin="0,0,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="150"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0" Text="Nombre Insumo" FontWeight="SemiBold" Padding="10"/>
                            <TextBlock Grid.Column="1" Text="Stock Actual" FontWeight="SemiBold" Padding="10"/>
                            <TextBlock Grid.Column="2" Text="Stock Mínimo" FontWeight="SemiBold" Padding="10"/>
                            <TextBlock Grid.Column="3" Text="Tipo" FontWeight="SemiBold" Padding="10"/>
                        </Grid>

                        <!-- Lista -->
                        <ItemsControl x:Name="lstInsumosAlerta" Grid.Row="1">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border BorderBrush="#E0E0E0" BorderThickness="0,0,0,1" Padding="10,15">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="150"/>
                                                <ColumnDefinition Width="150"/>
                                                <ColumnDefinition Width="150"/>
                                            </Grid.ColumnDefinitions>

                                            <TextBlock Grid.Column="0" Text="{Binding Nombre}" VerticalAlignment="Center"/>
                                            <TextBlock Grid.Column="1" Text="{Binding StockActual}" VerticalAlignment="Center" Foreground="#F44336"/>
                                            <TextBlock Grid.Column="2" Text="{Binding StockMinimo}" VerticalAlignment="Center"/>
                                            <TextBlock Grid.Column="3" Text="{Binding Tipo}" VerticalAlignment="Center"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </Grid>
                </Border>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
