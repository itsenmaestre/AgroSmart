<Page x:Class="AGROSMART_GUI.Views.Admin.AsignarEmpleadosPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" d:DesignWidth="840"
      Title="AsignarEmpleadosPage"
      Background="Transparent" Height="905">

    <Page.Resources>
        <!-- Estilos reutilizables -->
        <Style TargetType="Button" x:Key="PrimaryButton">
            <Setter Property="Background" Value="#2F5233"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#4A7C59"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="Button" x:Key="SecondaryButton">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#2F5233"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="16,10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderBrush" Value="#2F5233"/>
            <Setter Property="BorderThickness" Value="1.5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E8F5E9"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="ComboBox" x:Key="ModernComboBox">
            <Setter Property="Height" Value="44"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1.5"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#2F5233"/>
        </Style>
    </Page.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <Grid Margin="30,25">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <StackPanel Grid.Row="0" Margin="0,0,0,25">
                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                    <TextBlock Text="👥" FontSize="32" Margin="0,0,12,0" VerticalAlignment="Center"/>
                    <TextBlock Text="Asignar Tareas a Empleados" 
                               FontSize="28" 
                               FontWeight="Bold" 
                               Foreground="#2F5233"
                               VerticalAlignment="Center"/>
                </StackPanel>
                <TextBlock Text="RN-31: Una tarea debe estar asociada a un cultivo y un empleado asignado" 
                           FontSize="14" 
                           Foreground="#6B7280"
                           Margin="44,0,0,0"/>
            </StackPanel>

            <!-- Formulario de Asignación -->
            <Border Grid.Row="1" 
                    Background="White" 
                    CornerRadius="12" 
                    Padding="25"
                    Margin="0,0,0,20">
                <Border.Effect>
                    <DropShadowEffect Color="#000000" Direction="270" ShadowDepth="1" BlurRadius="15" Opacity="0.08"/>
                </Border.Effect>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Título -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,20">
                        <Border Background="#E8F5E9" CornerRadius="8" Padding="8" Margin="0,0,12,0">
                            <TextBlock Text="➕" FontSize="18"/>
                        </Border>
                        <TextBlock Text="Nueva Asignación" 
                                   FontSize="18" 
                                   FontWeight="SemiBold" 
                                   Foreground="#2F5233"
                                   VerticalAlignment="Center"/>
                    </StackPanel>

                    <!-- Campos -->
                    <Border Grid.Row="1" Background="#F9FAFB" CornerRadius="8" Padding="20">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="15"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="15"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Fila 1: Tarea y Empleado -->
                            <Grid Grid.Row="0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="15"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Seleccionar Tarea *" 
                                               FontSize="13" 
                                               FontWeight="Medium" 
                                               Foreground="#2F5233"
                                               Margin="0,0,0,6"/>
                                    <ComboBox x:Name="cboTarea" 
                                              Style="{StaticResource ModernComboBox}"
                                              DisplayMemberPath="Display"
                                              SelectedValuePath="IdTarea"
                                              SelectionChanged="CboTarea_SelectionChanged"
                                              ToolTip="RN-31: Selecciona la tarea a asignar"/>
                                </StackPanel>

                                <StackPanel Grid.Column="2">
                                    <TextBlock Text="Seleccionar Empleado *" 
                                               FontSize="13" 
                                               FontWeight="Medium" 
                                               Foreground="#2F5233"
                                               Margin="0,0,0,6"/>
                                    <ComboBox x:Name="cboEmpleado" 
                                              Style="{StaticResource ModernComboBox}"
                                              DisplayMemberPath="Display"
                                              SelectedValuePath="IdUsuario"
                                              ToolTip="RN-31: Selecciona el empleado"/>
                                </StackPanel>
                            </Grid>

                            <!-- Fila 2: Fecha y Pago -->
                            <Grid Grid.Row="2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="15"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Fecha de Asignación *" 
                                               FontSize="13" 
                                               FontWeight="Medium" 
                                               Foreground="#2F5233"
                                               Margin="0,0,0,6"/>
                                    <DatePicker x:Name="dpFechaAsignacion" 
            Height="44"
            FontSize="14"
            BorderBrush="#E0E0E0"
            BorderThickness="1.5"/>
                                </StackPanel>

                                <StackPanel Grid.Column="2">
                                    <TextBlock Text="Pago Acordado (Opcional)" 
                                               FontSize="13" 
                                               FontWeight="Medium" 
                                               Foreground="#2F5233"
                                               Margin="0,0,0,6"/>
                                    <TextBox x:Name="txtPagoAcordado" 
                                             Height="44"
                                             Padding="12,10"
                                             FontSize="14"
                                             BorderBrush="#E0E0E0"
                                             BorderThickness="1.5"
                                             Text="0.00"
                                             ToolTip="Monto específico acordado para esta tarea">
                                        <TextBox.Template>
                                            <ControlTemplate TargetType="TextBox">
                                                <Border Background="{TemplateBinding Background}"
                                                        BorderBrush="{TemplateBinding BorderBrush}"
                                                        BorderThickness="{TemplateBinding BorderThickness}"
                                                        CornerRadius="8">
                                                    <ScrollViewer x:Name="PART_ContentHost" 
                                                                  Margin="12,10"
                                                                  VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </TextBox.Template>
                                    </TextBox>
                                </StackPanel>
                            </Grid>

                            <!-- Fila 3: Detalles de la tarea seleccionada -->
                            <Border Grid.Row="4" 
                                    Background="White" 
                                    CornerRadius="8" 
                                    Padding="15"
                                    BorderBrush="#E0E0E0"
                                    BorderThickness="1">
                                <StackPanel>
                                    <TextBlock Text="📋 Detalles de la Tarea Seleccionada" 
                                               FontSize="13" 
                                               FontWeight="SemiBold" 
                                               Foreground="#2F5233"
                                               Margin="0,0,0,10"/>
                                    <TextBlock x:Name="txtDetallesTarea" 
                                               Text="Selecciona una tarea para ver sus detalles"
                                               FontSize="12"
                                               Foreground="#6B7280"
                                               TextWrapping="Wrap"
                                               LineHeight="20"/>
                                </StackPanel>
                            </Border>
                        </Grid>
                    </Border>

                    <!-- Botones -->
                    <StackPanel Grid.Row="2" 
                                Orientation="Horizontal" 
                                HorizontalAlignment="Right"
                                Margin="0,20,0,0">
                        <Button x:Name="btnLimpiar" 
                                Content="🔄 Limpiar" 
                                Style="{StaticResource SecondaryButton}"
                                Click="BtnLimpiar_Click"
                                Margin="0,0,10,0"/>
                        <Button x:Name="btnAsignar" 
                                Content="✅ Asignar Tarea" 
                                Style="{StaticResource PrimaryButton}"
                                Click="BtnAsignar_Click"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Lista de Asignaciones -->
            <Border Grid.Row="2" 
                    Background="White" 
                    CornerRadius="12" 
                    Padding="25">
                <Border.Effect>
                    <DropShadowEffect Color="#000000" Direction="270" ShadowDepth="1" BlurRadius="15" Opacity="0.08"/>
                </Border.Effect>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Header con filtro -->
                    <Grid Grid.Row="0" Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Orientation="Horizontal">
                            <Border Background="#E8F5E9" CornerRadius="8" Padding="8" Margin="0,0,12,0">
                                <TextBlock Text="📋" FontSize="18"/>
                            </Border>
                            <TextBlock Text="Asignaciones Registradas" 
                                       FontSize="18" 
                                       FontWeight="SemiBold" 
                                       Foreground="#2F5233"
                                       VerticalAlignment="Center"/>
                        </StackPanel>

                        <Button Grid.Column="2" 
                                Content="🔄 Actualizar Lista" 
                                Style="{StaticResource SecondaryButton}"
                                Click="BtnActualizar_Click"/>
                    </Grid>

                    <!-- DataGrid -->
                    <DataGrid x:Name="dgAsignaciones" 
                              Grid.Row="1"
                              AutoGenerateColumns="False"
                              IsReadOnly="True"
                              CanUserAddRows="False"
                              SelectionMode="Single"
                              GridLinesVisibility="None"
                              HeadersVisibility="Column"
                              Background="Transparent"
                              BorderThickness="0"
                              RowHeight="55"
                              FontSize="13">
                        <DataGrid.Resources>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="Background" Value="#F5F7F6"/>
                                <Setter Property="Foreground" Value="#2F5233"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                                <Setter Property="FontSize" Value="13"/>
                                <Setter Property="Padding" Value="12,10"/>
                            </Style>
                            <Style TargetType="DataGridRow">
                                <Setter Property="Background" Value="White"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#F9FAFB"/>
                                    </Trigger>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Background" Value="#E8F5E9"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </DataGrid.Resources>

                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding IdAsignacion}" Width="70"/>
                            <DataGridTextColumn Header="Tarea" Binding="{Binding NombreTarea}" Width="*" MinWidth="150"/>
                            <DataGridTextColumn Header="Empleado" Binding="{Binding NombreEmpleado}" Width="*" MinWidth="150"/>
                            <DataGridTextColumn Header="Fecha Asignación" Binding="{Binding FechaAsignacion, StringFormat=dd/MM/yyyy}" Width="130"/>
                            <DataGridTextColumn Header="Estado" Binding="{Binding Estado}" Width="120"/>
                            <DataGridTextColumn Header="Pago Acordado" Binding="{Binding PagoAcordado, StringFormat=C2}" Width="120"/>

                            <DataGridTemplateColumn Header="Acciones" Width="150">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                            <Button Content="👁️ Ver" 
                                                    Tag="{Binding}"
                                                    Click="BtnVerDetalle_Click"
                                                    Background="#3498DB" 
                                                    Foreground="White"
                                                    BorderThickness="0"
                                                    Padding="10,6"
                                                    Margin="0,0,5,0"
                                                    FontSize="11"
                                                    Cursor="Hand">
                                                <Button.Template>
                                                    <ControlTemplate TargetType="Button">
                                                        <Border Background="{TemplateBinding Background}" 
                                                                CornerRadius="6"
                                                                Padding="{TemplateBinding Padding}">
                                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                        </Border>
                                                    </ControlTemplate>
                                                </Button.Template>
                                            </Button>
                                            <Button Content="❌ Cancelar" 
                                                    Tag="{Binding}"
                                                    Click="BtnCancelar_Click"
                                                    Background="#E74C3C" 
                                                    Foreground="White"
                                                    BorderThickness="0"
                                                    Padding="10,6"
                                                    FontSize="11"
                                                    Cursor="Hand">
                                                <Button.Template>
                                                    <ControlTemplate TargetType="Button">
                                                        <Border Background="{TemplateBinding Background}" 
                                                                CornerRadius="6"
                                                                Padding="{TemplateBinding Padding}">
                                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                        </Border>
                                                    </ControlTemplate>
                                                </Button.Template>
                                            </Button>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </Border>
        </Grid>
    </ScrollViewer>
</Page>