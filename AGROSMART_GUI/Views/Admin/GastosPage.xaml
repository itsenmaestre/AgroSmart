<Page x:Class="AGROSMART_GUI.Views.Admin.GastosPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="clr-namespace:AGROSMART_GUI.Views.Admin"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d" d:DesignWidth="840"
      Title="GastosPage"
      Background="Transparent">
    <Page.Resources>
        <local:NullOrZeroToVisibilityConverter x:Key="NullOrZeroToVisibilityConverter" />
        <Style TargetType="Button" x:Key="PrimaryButton">
            <Setter Property="Background" Value="#2F5233"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="18,10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#4A7C59"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="Border" x:Key="CardBorder">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="16"/>
            <Setter Property="Padding" Value="24"/>
            <Setter Property="Margin" Value="0,0,0,18"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#000000" Direction="270" ShadowDepth="1" BlurRadius="18" Opacity="0.08"/>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <StackPanel Margin="30,25">
            <!-- Header -->
            <StackPanel Margin="0,0,0,25">
                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                    <TextBlock Text="ðŸ’°" FontSize="32" Margin="0,0,12,0" VerticalAlignment="Center"/>
                    <TextBlock Text="Gastos de Tareas"
                               FontSize="28"
                               FontWeight="Bold"
                               Foreground="#2F5233"
                               VerticalAlignment="Center"/>
                </StackPanel>
                <TextBlock Text="Visualiza el detalle de insumos y pagos una vez finalizada cada tarea."
                           FontSize="14"
                           Foreground="#6B7280"
                           Margin="44,0,0,0"/>
            </StackPanel>

            <!-- Contenido -->
            <StackPanel>
                <StackPanel x:Name="pnlVacio" Visibility="Collapsed" Margin="0,40">
                    <TextBlock Text="ðŸŒ¿" FontSize="72" HorizontalAlignment="Center"/>
                    <TextBlock Text="AÃºn no hay tareas finalizadas"
                               FontSize="22"
                               FontWeight="SemiBold"
                               Foreground="#2F5233"
                               HorizontalAlignment="Center"
                               Margin="0,12,0,4"/>
                    <TextBlock Text="Cuando completes una tarea verÃ¡s aquÃ­ los gastos registrados."
                               FontSize="14"
                               Foreground="#6B7280"
                               HorizontalAlignment="Center"/>
                </StackPanel>

                <ItemsControl x:Name="lstTareas">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Style="{StaticResource CardBorder}">
                                <StackPanel>
                                    <Grid Margin="0,0,0,15">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Grid.Column="0">
                                            <TextBlock Text="{Binding NombreTarea}"
                                                       FontSize="20"
                                                       FontWeight="SemiBold"
                                                       Foreground="#2F5233"/>
                                            <StackPanel Orientation="Horizontal" Margin="0,6,0,0">
                                                <StackPanel Orientation="Horizontal" Margin="0,0,12,0">
                                                    <TextBlock Text="ðŸŒ¾" FontSize="16" Margin="0,0,6,0"/>
                                                    <TextBlock Text="{Binding Cultivo}" FontSize="13" Foreground="#4A5568"/>
                                                </StackPanel>
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="ðŸ“…" FontSize="16" Margin="0,0,6,0"/>
                                                    <TextBlock Text="{Binding FechaProgramada, StringFormat='{}{0:dd MMM yyyy}'}"
                                                               FontSize="13"
                                                               Foreground="#4A5568"/>
                                                </StackPanel>
                                                <Border Background="#E8F5E9" CornerRadius="10" Padding="10,4">
                                                    <TextBlock Text="{Binding Estado}" FontSize="12" FontWeight="SemiBold" Foreground="#2F5233"/>
                                                </Border>
                                            </StackPanel>
                                        </StackPanel>

                                        <StackPanel Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Center" Orientation="Horizontal">
                                            <StackPanel Margin="0,0,16,0" VerticalAlignment="Center">
                                                <TextBlock Text="Total de la tarea"
                                                           FontSize="12"
                                                           Foreground="#6B7280"
                                                           HorizontalAlignment="Right"/>
                                                <TextBlock Text="{Binding TotalGasto, StringFormat='${0:N2}'}"
                                                           FontSize="22"
                                                           FontWeight="Bold"
                                                           Foreground="#2F5233"
                                                           HorizontalAlignment="Right"/>
                                            </StackPanel>
                                            <Button Content="âž• Registrar Insumo"
                                                    Style="{StaticResource PrimaryButton}"
                                                    Margin="0,0,0,0"
                                                    Tag="{Binding}"
                                                    Click="BtnAgregarInsumo_Click"/>
                                        </StackPanel>
                                    </Grid>

                                    <Expander Header="Ver detalle de gastos"
                                              Background="#F7FAF8"
                                              BorderBrush="#E5E7EB"
                                              BorderThickness="1"
                                              Padding="16"
                                              CornerRadius="12">
                                        <StackPanel>
                                            <!-- Resumen -->
                                            <Grid Margin="0,0,0,16">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>

                                                <StackPanel Grid.Column="0" Background="#FEF7ED" Padding="14" Margin="0,0,12,0" CornerRadius="12">
                                                    <TextBlock Text="Insumos"
                                                               FontSize="12"
                                                               Foreground="#C77700"/>
                                                    <TextBlock Text="{Binding TotalInsumos, StringFormat='${0:N2}'}"
                                                               FontSize="18"
                                                               FontWeight="SemiBold"
                                                               Foreground="#9C6500"/>
                                                </StackPanel>

                                                <StackPanel Grid.Column="1" Background="#EAF4FF" Padding="14" Margin="0,0,12,0" CornerRadius="12">
                                                    <TextBlock Text="Mano de obra"
                                                               FontSize="12"
                                                               Foreground="#1C64F2"/>
                                                    <TextBlock Text="{Binding TotalManoObra, StringFormat='${0:N2}'}"
                                                               FontSize="18"
                                                               FontWeight="SemiBold"
                                                               Foreground="#1C64F2"/>
                                                </StackPanel>

                                                <StackPanel Grid.Column="2" Background="#F0FDF4" Padding="14" CornerRadius="12">
                                                    <TextBlock Text="Transporte"
                                                               FontSize="12"
                                                               Foreground="#047857"/>
                                                    <TextBlock Text="{Binding CostoTransporte, StringFormat='${0:N2}'}"
                                                               FontSize="18"
                                                               FontWeight="SemiBold"
                                                               Foreground="#047857"/>
                                                </StackPanel>
                                            </Grid>

                                            <!-- Detalle de insumos -->
                                            <StackPanel Margin="0,0,0,16">
                                                <TextBlock Text="Insumos utilizados"
                                                           FontSize="15"
                                                           FontWeight="SemiBold"
                                                           Foreground="#2F5233"
                                                           Margin="0,0,0,8"/>
                                                <DataGrid ItemsSource="{Binding Insumos}"
                                                          AutoGenerateColumns="False"
                                                          CanUserAddRows="False"
                                                          HeadersVisibility="Column"
                                                          IsReadOnly="True"
                                                          RowBackground="White"
                                                          AlternatingRowBackground="#F8FAFC"
                                                          BorderThickness="0">
                                                    <DataGrid.Columns>
                                                        <DataGridTextColumn Header="Insumo" Binding="{Binding Nombre}" Width="2*"/>
                                                        <DataGridTextColumn Header="Cantidad" Binding="{Binding Cantidad, StringFormat='{0:N2}'}" Width="*"/>
                                                        <DataGridTextColumn Header="Costo Unitario" Binding="{Binding CostoUnitario, StringFormat='${0:N2}'}" Width="*"/>
                                                        <DataGridTextColumn Header="Total" Binding="{Binding CostoTotal, StringFormat='${0:N2}'}" Width="*"/>
                                                    </DataGrid.Columns>
                                                </DataGrid>
                                                <TextBlock Text="No hay insumos registrados"
                                                           FontStyle="Italic"
                                                           Foreground="#9CA3AF"
                                                           Margin="4,6,0,0"
                                                           Visibility="{Binding Insumos.Count, Converter={StaticResource NullOrZeroToVisibilityConverter}}"/>
                                            </StackPanel>

                                            <!-- Detalle de pagos -->
                                            <StackPanel>
                                                <TextBlock Text="Pagos a empleados"
                                                           FontSize="15"
                                                           FontWeight="SemiBold"
                                                           Foreground="#2F5233"
                                                           Margin="0,0,0,8"/>
                                                <DataGrid ItemsSource="{Binding Empleados}"
                                                          AutoGenerateColumns="False"
                                                          CanUserAddRows="False"
                                                          HeadersVisibility="Column"
                                                          IsReadOnly="True"
                                                          RowBackground="White"
                                                          AlternatingRowBackground="#F8FAFC"
                                                          BorderThickness="0">
                                                    <DataGrid.Columns>
                                                        <DataGridTextColumn Header="Empleado" Binding="{Binding Nombre}" Width="2*"/>
                                                        <DataGridTextColumn Header="Jornadas" Binding="{Binding Jornadas, StringFormat='{0:N2}'}" Width="*"/>
                                                        <DataGridTextColumn Header="Horas" Binding="{Binding Horas, StringFormat='{0:N2}'}" Width="*"/>
                                                        <DataGridTextColumn Header="Pago" Binding="{Binding Pago, StringFormat='${0:N2}'}" Width="*"/>
                                                    </DataGrid.Columns>
                                                </DataGrid>
                                                <TextBlock Text="No hay pagos registrados"
                                                           FontStyle="Italic"
                                                           Foreground="#9CA3AF"
                                                           Margin="4,6,0,0"
                                                           Visibility="{Binding Empleados.Count, Converter={StaticResource NullOrZeroToVisibilityConverter}}"/>
                                            </StackPanel>
                                        </StackPanel>
                                    </Expander>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</Page>
