<Page x:Class="AGROSMART_GUI.Views.Admin.InicioAdminPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Inicio Admin"
      Background="Transparent">

    <Page.Resources>
        <!-- Estilo para tarjetas de estadísticas -->
        <Style x:Key="StatCard" TargetType="Border">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="White" Offset="0"/>
                        <GradientStop Color="#FAFAFA" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="CornerRadius" Value="16"/>
            <Setter Property="Padding" Value="25"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#000000" Direction="270" ShadowDepth="3" BlurRadius="25" Opacity="0.08"/>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="35,25,35,30">

            <!-- Header de bienvenida -->
            <Grid Margin="0,0,0,35">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" Background="#E8F5E9" Width="70" Height="70" 
                        CornerRadius="35" Margin="0,0,20,0">
                    <TextBlock Text="👨‍💼" FontSize="38" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Border>

                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <TextBlock x:Name="txtBienvenida" Text="Panel de Administración" 
                               FontSize="32" FontWeight="Bold" Foreground="#2F5233"/>
                    <TextBlock Text="Gestiona tu sistema agrícola desde aquí" FontSize="14" Foreground="#7F8C8D"/>
                </StackPanel>

                <Border Grid.Column="2" Background="White" CornerRadius="12" Padding="15,10"
            VerticalAlignment="Center" Margin="10,0,-10,0">
    <Border.Effect>
        <DropShadowEffect BlurRadius="10" ShadowDepth="1" Opacity="0.1"/>
    </Border.Effect>
    <StackPanel Orientation="Horizontal">
        <TextBlock Text="📅" FontSize="18" Margin="0,0,8,0"/>
        <TextBlock x:Name="txtFechaHoy" FontSize="13" FontWeight="Medium" 
                       Foreground="#2F5233" VerticalAlignment="Center"/>
    </StackPanel>
</Border>
            </Grid>

            <!-- Tarjetas de estadísticas principales (4 columnas) -->
            <Grid Margin="0,0,0,35">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="15"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="15"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="15"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Cultivos Activos -->
                <Border Grid.Column="0" Style="{StaticResource StatCard}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Border Grid.Row="0" Background="#E8F5E9" Width="50" Height="50" 
                                CornerRadius="25" HorizontalAlignment="Left">
                            <TextBlock Text="🌾" FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>

                        <StackPanel Grid.Row="1" Margin="0,15,0,10">
                            <TextBlock Text="Cultivos Activos" FontSize="13" Foreground="#7F8C8D" Margin="0,0,0,5"/>
                            <TextBlock x:Name="txtCultivosActivos" Text="0" FontSize="48" 
                                       FontWeight="Bold" Foreground="#4CAF50"/>
                        </StackPanel>

                        <Border Grid.Row="2" Height="4" Background="#E8F5E9" CornerRadius="2"/>
                    </Grid>
                </Border>

                <!-- Tareas Creadas -->
                <Border Grid.Column="2" Style="{StaticResource StatCard}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Border Grid.Row="0" Background="#FFF3E0" Width="50" Height="50" 
                                CornerRadius="25" HorizontalAlignment="Left">
                            <TextBlock Text="✅" FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>

                        <StackPanel Grid.Row="1" Margin="0,15,0,10">
                            <TextBlock Text="Tareas Creadas" FontSize="13" Foreground="#7F8C8D" Margin="0,0,0,5"/>
                            <TextBlock x:Name="txtTareasCreadas" Text="0" FontSize="48" 
                                       FontWeight="Bold" Foreground="#FF9800"/>
                        </StackPanel>

                        <Border Grid.Row="2" Height="4" Background="#FFF3E0" CornerRadius="2"/>
                    </Grid>
                </Border>

                <!-- Total Empleados -->
                <Border Grid.Column="4" Style="{StaticResource StatCard}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Border Grid.Row="0" Background="#E3F2FD" Width="50" Height="50" 
                                CornerRadius="25" HorizontalAlignment="Left">
                            <TextBlock Text="👥" FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>

                        <StackPanel Grid.Row="1" Margin="0,15,0,10">
                            <TextBlock Text="Total Empleados" FontSize="13" Foreground="#7F8C8D" Margin="0,0,0,5"/>
                            <TextBlock x:Name="txtTotalEmpleados" Text="0" FontSize="48" 
                                       FontWeight="Bold" Foreground="#2196F3"/>
                        </StackPanel>

                        <Border Grid.Row="2" Height="4" Background="#E3F2FD" CornerRadius="2"/>
                    </Grid>
                </Border>

                <!-- Tareas Pendientes -->
                <Border Grid.Column="6" Style="{StaticResource StatCard}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Border Grid.Row="0" Background="#FFEBEE" Width="50" Height="50" 
                                CornerRadius="25" HorizontalAlignment="Left">
                            <TextBlock Text="⚠️" FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>

                        <StackPanel Grid.Row="1" Margin="0,15,0,10">
                            <TextBlock Text="Tareas Pendientes" FontSize="13" Foreground="#7F8C8D" Margin="0,0,0,5"/>
                            <TextBlock x:Name="txtTareasPendientes" Text="0" FontSize="48" 
                                       FontWeight="Bold" Foreground="#F44336"/>
                        </StackPanel>

                        <Border Grid.Row="2" Height="4" Background="#FFEBEE" CornerRadius="2"/>
                    </Grid>
                </Border>
            </Grid>

            <!-- Sección de alertas e información -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="15"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Resumen de actividad -->
                <Border Grid.Column="0" Background="White" CornerRadius="16" Padding="30">
                    <Border.Effect>
                        <DropShadowEffect Color="#000000" Direction="270" ShadowDepth="3" BlurRadius="25" Opacity="0.08"/>
                    </Border.Effect>

                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                            <Border Background="#E8F5E9" CornerRadius="8" Padding="8" Margin="0,0,12,0">
                                <TextBlock Text="📊" FontSize="20"/>
                            </Border>
                            <TextBlock Text="Resumen General" FontSize="20" FontWeight="SemiBold" 
                                       Foreground="#2F5233" VerticalAlignment="Center"/>
                        </StackPanel>

                        <Border Background="#F8F9FA" CornerRadius="12" Padding="20">
                            <TextBlock x:Name="txtResumen" TextWrapping="Wrap" FontSize="14" 
                                       Foreground="#555" LineHeight="26"/>
                        </Border>
                    </StackPanel>
                </Border>

                <!-- Acciones rápidas -->
                <Border Grid.Column="2" Background="White" CornerRadius="16" Padding="25">
                    <Border.Effect>
                        <DropShadowEffect Color="#000000" Direction="270" ShadowDepth="3" BlurRadius="25" Opacity="0.08"/>
                    </Border.Effect>

                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                            <Border Background="#E8F5E9" CornerRadius="8" Padding="8" Margin="0,0,12,0">
                                <TextBlock Text="⚡" FontSize="18"/>
                            </Border>
                            <TextBlock Text="Acceso Rápido" FontSize="18" FontWeight="SemiBold" 
                                       Foreground="#2F5233" VerticalAlignment="Center"/>
                        </StackPanel>

                        <StackPanel>
                            <!-- Botón Crear Tarea -->
                            <Button Margin="0,0,0,10" Height="50" Background="#4CAF50" 
                                    BorderThickness="0" Cursor="Hand"
                                    Click="BtnCrearTarea_Click">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
                                                CornerRadius="10" Padding="15">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="➕" FontSize="18" Margin="0,0,10,0"/>
                                                <TextBlock Text="Crear Tarea" FontSize="14" 
                                                           FontWeight="SemiBold" Foreground="White"/>
                                            </StackPanel>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#45A049"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>

                            <!-- Botón Registrar Cultivo -->
                            <Button Margin="0,0,0,10" Height="50" Background="#2196F3" 
                                    BorderThickness="0" Cursor="Hand"
                                    Click="BtnRegistrarCultivo_Click">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
                                                CornerRadius="10" Padding="15">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="🌱" FontSize="18" Margin="0,0,10,0"/>
                                                <TextBlock Text="Registrar Cultivo" FontSize="14" 
                                                           FontWeight="SemiBold" Foreground="White"/>
                                            </StackPanel>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#1976D2"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>

                            <!-- Botón Gestionar Insumos -->
                            <Button Height="50" Background="#FF9800" 
                                    BorderThickness="0" Cursor="Hand"
                                    Click="BtnGestionarInsumos_Click">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
                                                CornerRadius="10" Padding="15">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="📦" FontSize="18" Margin="0,0,10,0"/>
                                                <TextBlock Text="Gestionar Insumos" FontSize="14" 
                                                           FontWeight="SemiBold" Foreground="White"/>
                                            </StackPanel>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#F57C00"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </Grid>

        </StackPanel>
    </ScrollViewer>
</Page>