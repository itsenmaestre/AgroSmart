<Window x:Class="AGROSMART_GUI.Views.Admin.RegistrarInsumoTareaWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Registrar insumo en tarea"
        Height="420" Width="560"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#F4F7F6">
    <Window.Resources>
        <Style TargetType="ComboBox" x:Key="ModernComboBox">
            <Setter Property="Height" Value="42"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderBrush" Value="#D1D5DB"/>
            <Setter Property="BorderThickness" Value="1.5"/>
            <Setter Property="Background" Value="White"/>
        </Style>
        <Style TargetType="TextBox" x:Key="ModernTextBox">
            <Setter Property="Height" Value="42"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderBrush" Value="#D1D5DB"/>
            <Setter Property="BorderThickness" Value="1.5"/>
            <Setter Property="Background" Value="White"/>
        </Style>
        <Style TargetType="Button" x:Key="PrimaryButton">
            <Setter Property="Height" Value="44"/>
            <Setter Property="Padding" Value="20,6"/>
            <Setter Property="Background" Value="#2F5233"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="10" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#3F6F46"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,16">
            <TextBlock Text="Agregar insumo a la tarea"
                       FontSize="22"
                       FontWeight="Bold"
                       Foreground="#2F5233"/>
            <TextBlock Text="Selecciona un insumo consumible y registra la cantidad utilizada."
                       FontSize="13"
                       Foreground="#6B7280"
                       Margin="0,6,0,0"/>
        </StackPanel>

        <Border Grid.Row="1" Background="White" CornerRadius="14" Padding="20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="16"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="16"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0">
                    <TextBlock Text="Insumo consumible"
                               FontSize="13"
                               FontWeight="SemiBold"
                               Foreground="#2F5233"/>
                    <ComboBox x:Name="cboInsumo"
                              Style="{StaticResource ModernComboBox}"
                              DisplayMemberPath="Nombre"
                              SelectedValuePath="Id"
                              SelectionChanged="CboInsumo_SelectionChanged"/>
                </StackPanel>

                <StackPanel Grid.Row="2">
                    <TextBlock Text="Cantidad utilizada"
                               FontSize="13"
                               FontWeight="SemiBold"
                               Foreground="#2F5233"/>
                    <TextBox x:Name="txtCantidad"
                             Style="{StaticResource ModernTextBox}"
                             TextChanged="TxtCantidad_TextChanged"
                             ToolTip="Ej: 15.5"/>
                </StackPanel>

                <Border Grid.Row="4" Background="#F8FAFC" CornerRadius="12" Padding="16">
                    <StackPanel>
                        <TextBlock Text="Resumen"
                                   FontSize="14"
                                   FontWeight="SemiBold"
                                   Foreground="#2F5233"
                                   Margin="0,0,0,10"/>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                            <TextBlock Text="Stock disponible:" FontSize="12" Foreground="#6B7280" Width="140"/>
                            <TextBlock x:Name="txtStockDisponible" FontSize="12" FontWeight="SemiBold" Foreground="#2F5233"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                            <TextBlock Text="Costo por unidad:" FontSize="12" Foreground="#6B7280" Width="140"/>
                            <TextBlock x:Name="txtCostoUnidad" FontSize="12" FontWeight="SemiBold" Foreground="#2F5233"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Costo total estimado:" FontSize="12" Foreground="#6B7280" Width="140"/>
                            <TextBlock x:Name="txtCostoTotal" FontSize="14" FontWeight="Bold" Foreground="#2F5233"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,18,0,0">
            <Button Content="Cancelar" Width="110" Height="44" Margin="0,0,12,0"
                    Background="Transparent"
                    Foreground="#EF4444"
                    BorderBrush="#EF4444"
                    BorderThickness="1.5"
                    Click="BtnCancelar_Click"/>
            <Button Content="Registrar" Width="140" Style="{StaticResource PrimaryButton}"
                    Click="BtnRegistrar_Click"/>
        </StackPanel>
    </Grid>
</Window>
