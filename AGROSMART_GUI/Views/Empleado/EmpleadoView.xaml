<Window x:Class="AGROSMART_GUI.Views.Empleado.EmpleadoView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AgroSmart - Panel Empleado" 
        Height="732" Width="1100"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5">

    <Window.Resources>
        <Style x:Key="MenuButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,15"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Left" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#5CB85C"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- ===== MENÚ LATERAL ===== -->
        <Border Grid.Column="0" Background="#4CAF50">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Logo y título -->
                <StackPanel Grid.Row="0" Margin="20,30,20,30" HorizontalAlignment="Center">
                    <TextBlock Text="🌱" FontSize="48" HorizontalAlignment="Center" Foreground="White"/>
                    <TextBlock Text="AgroSmart" FontSize="22" FontWeight="Bold" 
                               Foreground="White" HorizontalAlignment="Center" Margin="0,10,0,0"/>
                </StackPanel>

                <!-- Opciones del menú -->
                <StackPanel Grid.Row="1">
                    <Button x:Name="btnInicio" Content="🏠 Inicio" Style="{StaticResource MenuButtonStyle}" 
                            Background="#5CB85C" Click="BtnInicio_Click"/>
                    <Button x:Name="btnMisTareas" Content="📋 Mis tareas" Style="{StaticResource MenuButtonStyle}" 
                            Click="BtnMisTareas_Click"/>
                    <Button x:Name="btnProgreso" Content="📊 Progreso" Style="{StaticResource MenuButtonStyle}" 
                            Click="BtnProgreso_Click"/>
                    <Button x:Name="btnPerfil" Content="👤 Perfil" Style="{StaticResource MenuButtonStyle}" 
                            Click="BtnPerfil_Click"/>
                    <Button x:Name="btnAyuda" Content="❓ Ayuda" Style="{StaticResource MenuButtonStyle}" 
                            Click="BtnAyuda_Click"/>
                </StackPanel>

                <!-- Botón cerrar sesión -->
                <Button Grid.Row="2" Content="🚪 Cerrar Sesión" 
                        Style="{StaticResource MenuButtonStyle}"
                        Background="#E74C3C"
                        Click="BtnCerrarSesion_Click"
                        Margin="10,10,10,20"/>
            </Grid>
        </Border>

        <!-- ===== CONTENIDO PRINCIPAL (Frame) ===== -->
        <Border Grid.Column="1" Background="White" CornerRadius="15" Margin="20">
            <Border.Effect>
                <DropShadowEffect Color="#000000" Direction="270" 
                                 ShadowDepth="2" BlurRadius="20" Opacity="0.1"/>
            </Border.Effect>

            <Frame x:Name="EmpleadoFrame" 
                   NavigationUIVisibility="Hidden"
                   Background="Transparent"/>
        </Border>
    </Grid>
</Window>