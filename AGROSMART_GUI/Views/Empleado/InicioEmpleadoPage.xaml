<Page x:Class="AGROSMART_GUI.Views.Empleado.InicioEmpleadoPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Inicio"
      Background="Transparent">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="30,20">

            <!-- Título de bienvenida -->
            <TextBlock x:Name="txtBienvenida" Text="Hola, bienvenido" 
                       FontSize="28" FontWeight="SemiBold" 
                       Foreground="#333" Margin="0,0,0,30"/>

            <!-- Tarjetas de estadísticas -->
            <Grid Margin="0,0,0,30">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Tareas asignadas hoy -->
                <Border Grid.Column="0" Background="White" CornerRadius="8" 
                        Padding="20" Margin="0,0,10,0">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.2"/>
                    </Border.Effect>
                    <StackPanel>
                        <TextBlock Text="Tareas asignadas hoy" FontSize="13" Foreground="#666"/>
                        <TextBlock x:Name="txtTareasHoy" Text="0" FontSize="48" 
                                   FontWeight="Bold" Foreground="#4CAF50" Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>

                <!-- En progreso -->
                <Border Grid.Column="1" Background="White" CornerRadius="8" 
                        Padding="20" Margin="5,0">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.2"/>
                    </Border.Effect>
                    <StackPanel>
                        <TextBlock Text="En progreso" FontSize="13" Foreground="#666"/>
                        <TextBlock x:Name="txtEnProgreso" Text="0" FontSize="48" 
                                   FontWeight="Bold" Foreground="#FF9800" Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Vencidas -->
                <Border Grid.Column="2" Background="White" CornerRadius="8" 
                        Padding="20" Margin="10,0,0,0">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.2"/>
                    </Border.Effect>
                    <StackPanel>
                        <TextBlock Text="Vencidas" FontSize="13" Foreground="#666"/>
                        <TextBlock x:Name="txtVencidas" Text="0" FontSize="48" 
                                   FontWeight="Bold" Foreground="#F44336" Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Resumen de tareas recientes -->
            <TextBlock Text="Resumen de Actividad" FontSize="20" FontWeight="SemiBold" 
                       Foreground="#333" Margin="0,0,0,15"/>

            <Border Background="White" CornerRadius="8" Padding="20">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.2"/>
                </Border.Effect>

                <StackPanel>
                    <TextBlock x:Name="txtResumen" TextWrapping="Wrap" FontSize="14" 
                               Foreground="#555" LineHeight="24"/>
                </StackPanel>
            </Border>

        </StackPanel>
    </ScrollViewer>
</Page>