<Window x:Class="AGROSMART_GUI.Views.Shared.BienvenidaPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AgroSmart - Bienvenido" 
        Height="600" Width="900"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="None">

    <Window.Resources>
        <Style x:Key="ButtonGreenStyle" TargetType="Button">
            <Setter Property="Background" Value="#4CAF50"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="25"
                                Padding="40,0">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#45A049"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ButtonOutlineStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#4CAF50"/>
            <Setter Property="BorderBrush" Value="#4CAF50"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="25"
                                Padding="40,0">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E8F5E9"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- ===== PANEL IZQUIERDO - Verde con logo ===== -->
        <Border Grid.Column="0">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#4CAF50" Offset="0"/>
                    <GradientStop Color="#A8E6A1" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>

            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <!-- Logo grande -->
                <Ellipse Width="180" Height="180" Margin="0,0,0,30">
                    <Ellipse.Fill>
                        <RadialGradientBrush>
                            <GradientStop Color="#66BB6A" Offset="0"/>
                            <GradientStop Color="#4CAF50" Offset="1"/>
                        </RadialGradientBrush>
                    </Ellipse.Fill>
                    <Ellipse.Effect>
                        <DropShadowEffect BlurRadius="30" ShadowDepth="0" Color="#000000" Opacity="0.3"/>
                    </Ellipse.Effect>
                </Ellipse>

                <!-- Icono de planta sobre el círculo -->
                <TextBlock Text="🌱" FontSize="80" 
                           HorizontalAlignment="Center" 
                           Margin="0,-150,0,80"/>

                <!-- Título principal -->
                <TextBlock Text="AgroSmart" 
                           FontSize="48" FontWeight="Bold" 
                           Foreground="White" 
                           HorizontalAlignment="Center"
                           Margin="0,0,0,10">
                    <TextBlock.Effect>
                        <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.3"/>
                    </TextBlock.Effect>
                </TextBlock>

                <!-- Subtítulo -->
                <TextBlock Text="Impulsa la Gestión Inteligente de tu" 
                           FontSize="16" 
                           Foreground="White" 
                           HorizontalAlignment="Center"
                           TextAlignment="Center"
                           Opacity="0.95"/>
                <TextBlock Text="Producción Agrícola" 
                           FontSize="16" 
                           Foreground="White" 
                           HorizontalAlignment="Center"
                           Opacity="0.95"/>
            </StackPanel>
        </Border>

        <!-- ===== PANEL DERECHO - Blanco con opciones ===== -->
        <Border Grid.Column="1" Background="White">
            <StackPanel VerticalAlignment="Center" Margin="60,0">

                <!-- Saludo -->
                <TextBlock Text="¡Hola!" 
                           FontSize="36" FontWeight="Bold" 
                           Foreground="#4CAF50" 
                           HorizontalAlignment="Left"
                           Margin="0,0,0,10"/>

                <TextBlock Text="Bienvenido a AgroSmart" 
                           FontSize="24" FontWeight="SemiBold" 
                           Foreground="#333" 
                           HorizontalAlignment="Left"
                           Margin="0,0,0,40"/>

                <!-- Instrucción -->
                <TextBlock Text="Selecciona una opción para continuar" 
                           FontSize="14" 
                           Foreground="#666" 
                           HorizontalAlignment="Left"
                           Margin="0,0,0,30"/>

                <!-- Botón: Ingresar a mi cuenta -->
                <Button Content="Ingresar a mi cuenta" 
                        Style="{StaticResource ButtonGreenStyle}"
                        Margin="0,0,0,20"
                        Click="BtnIngresar_Click"/>

                <!-- Separador con "o" -->
                <StackPanel Orientation="Horizontal" 
                            HorizontalAlignment="Center" 
                            Margin="0,10,0,10">
                    <Border Width="100" Height="1" Background="#E0E0E0" VerticalAlignment="Center"/>
                    <TextBlock Text=" o " FontSize="14" Foreground="#999" Margin="10,0"/>
                    <Border Width="100" Height="1" Background="#E0E0E0" VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Botón: Crear cuenta (registrarme) -->
                <Button Content="Crear cuenta (registrarme)" 
                        Style="{StaticResource ButtonOutlineStyle}"
                        Margin="0,10,0,0"
                        Click="BtnRegistro_Click"/>

            </StackPanel>
        </Border>
    </Grid>
</Window>
