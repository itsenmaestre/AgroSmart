<Window x:Class="AGROSMART_GUI.Views.Shared.BienvenidaPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Bienvenido a AgroSmart" 
        Height="600" Width="900"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">

    <Border Background="White" CornerRadius="20" BorderBrush="#00A859" BorderThickness="3">
        <Border.Effect>
            <DropShadowEffect BlurRadius="30" ShadowDepth="0" Opacity="0.4"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="🌱" FontSize="120" HorizontalAlignment="Center" Margin="0,0,0,30"/>
                <TextBlock Text="AgroSmart" FontSize="56" FontWeight="Black" 
                          Foreground="#00A859" HorizontalAlignment="Center"/>
                <TextBlock Text="Sistema de Gestión Agrícola Inteligente" 
                          FontSize="20" Foreground="#6B7280" 
                          HorizontalAlignment="Center" Margin="0,15,0,0"/>

                <ProgressBar IsIndeterminate="True" Width="300" Height="6" 
                            Margin="0,50,0,0" Foreground="#00A859"/>
            </StackPanel>

            <TextBlock Grid.Row="1" Text="Cargando..." 
                      FontSize="14" Foreground="#9CA3AF" 
                      HorizontalAlignment="Center" Margin="0,0,0,40"/>
        </Grid>
    </Border>
</Window>
