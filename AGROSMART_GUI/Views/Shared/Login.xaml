<Window x:Class="AGROSMART_GUI.Views.Shared.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AgroSmart - Iniciar Sesión" 
        Height="581" Width="450"
        WindowStartupLocation="CenterScreen" 
        ResizeMode="NoResize"
        Background="#F5F5F5">

    <Window.Resources>
        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
            <Setter Property="Foreground" Value="#333"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>

        <Style x:Key="InputStyle" TargetType="TextBox">
            <Setter Property="Height" Value="40"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
        </Style>

        <Style x:Key="PasswordStyle" TargetType="PasswordBox">
            <Setter Property="Height" Value="40"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="PasswordBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="3"
                                Padding="12,0">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                          VerticalAlignment="Center"
                                          Focusable="false"
                                          HorizontalScrollBarVisibility="Hidden"
                                          VerticalScrollBarVisibility="Hidden"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ButtonPrimaryStyle" TargetType="Button">
            <Setter Property="Background" Value="#4CAF50"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Height" Value="45"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#45A049"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Border Background="White" CornerRadius="10" Margin="30,30,30,22" Padding="40">
        <Border.Effect>
            <DropShadowEffect BlurRadius="20" ShadowDepth="2" Opacity="0.3"/>
        </Border.Effect>

        <StackPanel>
            <!-- Logo -->
            <TextBlock Text="🌱" FontSize="60" 
                       HorizontalAlignment="Center" 
                       Margin="0,0,0,20"/>

            <!-- Título -->
            <TextBlock Text="Iniciar Sesión" 
                       FontSize="28" FontWeight="Bold" 
                       Foreground="#4CAF50" 
                       HorizontalAlignment="Center"
                       Margin="0,0,0,10"/>

            <TextBlock Text="Ingresa tus credenciales" 
                       FontSize="14" 
                       Foreground="#666" 
                       HorizontalAlignment="Center"
                       Margin="0,0,0,30"/>

            <!-- Formulario -->
            <StackPanel>
                <!-- Cédula (ID Usuario) -->
                <StackPanel Margin="0,0,0,20">
                    <TextBlock Text="Cédula (ID Usuario)" Style="{StaticResource LabelStyle}"/>
                    <TextBox x:Name="txtIdUsuario" Style="{StaticResource InputStyle}"/>
                </StackPanel>

                <!-- Contraseña -->
                <StackPanel Margin="0,0,0,30">
                    <TextBlock Text="Contraseña" Style="{StaticResource LabelStyle}"/>
                    <PasswordBox x:Name="txtPass" Style="{StaticResource PasswordStyle}"/>
                </StackPanel>

                <!-- Botón Ingresar -->
                <Button Content="Ingresar" 
                        Style="{StaticResource ButtonPrimaryStyle}"
                        Click="BtnIngresar_Click"/>

                <!-- Link para registro -->
                <TextBlock HorizontalAlignment="Center" Margin="0,20,0,0">
                    <Run Text="¿No tienes cuenta? " FontSize="13" Foreground="#666"/>
                    <Hyperlink Click="BtnRegistro_Click">
                        <Run Text="Regístrate aquí" FontSize="13" Foreground="#4CAF50" FontWeight="SemiBold"/>
                    </Hyperlink>
                </TextBlock>
            </StackPanel>
        </StackPanel>
    </Border>
</Window>