<Window x:Class="AGROSMART_GUI.Views.Shared.RegistroPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AgroSmart - Registro de Empleado" 
        Height="1142" Width="500"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#F5F5F5">

    <Window.Resources>
        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
            <Setter Property="Foreground" Value="#333"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>

        <Style x:Key="InputStyle" TargetType="TextBox">
            <Setter Property="Height" Value="38"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
        </Style>

        <Style x:Key="PasswordStyle" TargetType="PasswordBox">
            <Setter Property="Height" Value="38"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="PasswordBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="3"
                                Padding="12,0">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                          VerticalAlignment="Center"
                                          Focusable="false"
                                          HorizontalScrollBarVisibility="Hidden"
                                          VerticalScrollBarVisibility="Hidden"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ButtonPrimaryStyle" TargetType="Button">
            <Setter Property="Background" Value="#4CAF50"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Height" Value="45"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#45A049"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Border Background="White" CornerRadius="10" Margin="30" Padding="40">
            <Border.Effect>
                <DropShadowEffect BlurRadius="20" ShadowDepth="2" Opacity="0.3"/>
            </Border.Effect>

            <StackPanel>
                <!-- Título -->
                <TextBlock Text="🌱 Crear Cuenta" 
                           FontSize="28" FontWeight="Bold" 
                           Foreground="#4CAF50" 
                           HorizontalAlignment="Center"
                           Margin="0,0,0,10"/>

                <TextBlock Text="Registro automático como Empleado" 
                           FontSize="14" 
                           Foreground="#666" 
                           HorizontalAlignment="Center"
                           Margin="0,0,0,30"/>

                <!-- Formulario -->
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Cédula (ID_USUARIO) -->
                    <StackPanel Grid.Row="0" Margin="0,0,0,15">
                        <TextBlock Text="Cédula *" Style="{StaticResource LabelStyle}"/>
                        <TextBox x:Name="txtCedula" Style="{StaticResource InputStyle}"/>
                        <TextBlock Text="Número de identificación único" 
                                   FontSize="11" Foreground="#999" Margin="0,3,0,0"/>
                    </StackPanel>

                    <!-- Primer Nombre -->
                    <StackPanel Grid.Row="1" Margin="0,0,0,15">
                        <TextBlock Text="Primer Nombre *" Style="{StaticResource LabelStyle}"/>
                        <TextBox x:Name="txtPrimerNombre" Style="{StaticResource InputStyle}"/>
                    </StackPanel>

                    <!-- Segundo Nombre -->
                    <StackPanel Grid.Row="2" Margin="0,0,0,15">
                        <TextBlock Text="Segundo Nombre" Style="{StaticResource LabelStyle}"/>
                        <TextBox x:Name="txtSegundoNombre" Style="{StaticResource InputStyle}"/>
                    </StackPanel>

                    <!-- Primer Apellido -->
                    <StackPanel Grid.Row="3" Margin="0,0,0,15">
                        <TextBlock Text="Primer Apellido *" Style="{StaticResource LabelStyle}"/>
                        <TextBox x:Name="txtPrimerApellido" Style="{StaticResource InputStyle}"/>
                    </StackPanel>

                    <!-- Segundo Apellido -->
                    <StackPanel Grid.Row="4" Margin="0,0,0,15">
                        <TextBlock Text="Segundo Apellido" Style="{StaticResource LabelStyle}"/>
                        <TextBox x:Name="txtSegundoApellido" Style="{StaticResource InputStyle}"/>
                    </StackPanel>

                    <!-- Email -->
                    <StackPanel Grid.Row="5" Margin="0,0,0,15">
                        <TextBlock Text="Correo Electrónico *" Style="{StaticResource LabelStyle}"/>
                        <TextBox x:Name="txtEmail" Style="{StaticResource InputStyle}"/>
                    </StackPanel>

                    <!-- Teléfono -->
                    <StackPanel Grid.Row="6" Margin="0,0,0,15">
                        <TextBlock Text="Teléfono *" Style="{StaticResource LabelStyle}"/>
                        <TextBox x:Name="txtTelefono" Style="{StaticResource InputStyle}"/>
                        <TextBlock Text="Mínimo 7 dígitos" 
                                   FontSize="11" Foreground="#999" Margin="0,3,0,0"/>
                    </StackPanel>

                    <!-- Contraseña -->
                    <StackPanel Grid.Row="7" Margin="0,0,0,15">
                        <TextBlock Text="Contraseña *" Style="{StaticResource LabelStyle}"/>
                        <PasswordBox x:Name="txtContrasena" Style="{StaticResource PasswordStyle}"/>
                    </StackPanel>

                    <!-- Confirmar Contraseña -->
                    <StackPanel Grid.Row="8" Margin="0,0,0,15">
                        <TextBlock Text="Confirmar Contraseña *" Style="{StaticResource LabelStyle}"/>
                        <PasswordBox x:Name="txtConfirmarContrasena" Style="{StaticResource PasswordStyle}"/>
                    </StackPanel>

                    <!-- Nota informativa -->
                    <Border Grid.Row="9" Background="#E8F5E9" CornerRadius="5" Padding="15" Margin="0,10,0,20">
                        <TextBlock TextWrapping="Wrap" FontSize="12" Foreground="#2E7D32">
                            <Run Text="ℹ️ "/>
                            <Run Text="Al registrarte, serás automáticamente un "/>
                            <Run FontWeight="Bold" Text="Empleado"/>
                            <Run Text=" del sistema. Los administradores gestionarán tus tareas y asignaciones."/>
                        </TextBlock>
                    </Border>
                </Grid>

                <!-- Botones de acción -->
                <Grid Margin="0,10,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Button Grid.Column="0" Content="Cancelar" 
                            Height="45" FontSize="14"
                            Background="#E0E0E0" Foreground="#333"
                            BorderThickness="0" Cursor="Hand"
                            Click="BtnCancelar_Click">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" CornerRadius="5">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <Button Grid.Column="2" Content="Registrarme" 
                            Style="{StaticResource ButtonPrimaryStyle}"
                            Click="BtnRegistrar_Click"/>
                </Grid>
            </StackPanel>
        </Border>
    </ScrollViewer>
</Window>